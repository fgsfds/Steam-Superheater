<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:Avalonia.Desktop.ViewModels"
             x:DataType="vm:IProgressBarViewModel"
             x:Class="Avalonia.Desktop.UserControls.ProgressBar">

    <Grid RowDefinitions="auto">
        <ProgressBar x:Name="GeneralProgressBar"
                     Height="20"
                     IsIndeterminate="{Binding IsInProgress}"
                     Value="{Binding ProgressBarValue}"/>

        <TextBlock x:Name="GeneralProgressBarText" Text="{Binding ProgressBarText}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>

</UserControl>
